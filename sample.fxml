  <children>
    <AnchorPane prefHeight="408.0" prefWidth="407.0">
      <children>
        <Button fx:id="btnClick" layoutX="165" layoutY="250.0" mnemonicParsing="false"
          onAction="#printHello" text="Click Here!"/>
        <TextArea fx:id="messageTxtF" layoutX="110" layoutY="75" prefHeight="100"
          prefWidth="200"/>
      </children>
    </AnchorPane>
  </children>
